<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="php-path">
    <description>Modified PSR2 standards for php-path library</description>
    <!-- Modified mostly from the PSR2 Standard -->
    <arg name="tab-width" value="4"/>

    <rule ref="PSR2">
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration"/>
        <exclude name="PSR2.ControlStructures.ElseIfDeclaration" />
    </rule>

    <!-- Function braces should go on the same line as the function declaration, so this checks to make sure -->
    <rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>
</ruleset>